<Application x:Class="SecureMe.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SecureMe"
             xmlns:ni="http://www.hardcodet.net/taskbar"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ni:TaskbarIcon x:Key="TrayIcon"
                        IconSource="/Resources/Images/mountain_5od_icon.ico"
                        ToolTipText="SecureMe Running"
                        Visibility="Visible"
                        MenuActivation="RightClick">
            <ni:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Exit" Click="Exit_Click"/>
                </ContextMenu>
            </ni:TaskbarIcon.ContextMenu>
        </ni:TaskbarIcon>
        <Style x:Key="RoundedPasswordBox" TargetType="PasswordBox">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="PasswordBox">
                            <Grid>
                                <Border x:Name="border"
                                        Background="#1C2A3A"
                                        BorderBrush="#0EA5E9"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="5"
                                        Width="330"
                                        Height="43">
                                    <ScrollViewer x:Name="PART_ContentHost" />
                                </Border>

                                <TextBlock x:Name="Placeholder"
                                           Text="Password"
                                           Foreground="Gray"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Visible"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#0284C7"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Grid>
                                <Border x:Name="border"
                                        Background="#1C2A3A"
                                        BorderBrush="#0EA5E9"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="5"
                                        Width="330"
                                        Height="43">
                                    <ScrollViewer x:Name="PART_ContentHost" />
                                </Border>
                                <TextBlock x:Name="Placeholder"
                                           Text="Username"
                                           Foreground="Gray"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Visible"/>      
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#0EA5E9" />
                                    <Setter TargetName="border" Property="BorderThickness" Value="2" />
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        <Style x:Key="RoundedSearchBar" TargetType="TextBox">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Grid>
                                <Border x:Name="border"
