<Window x:Class="SecureMe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecureMe"
        mc:Ignorable="d"
        Height="650" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
          
            <GradientStop Color="#0F172A" Offset="0" />
           
            <GradientStop Color="#1E293B" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="10">
        <StackPanel>
            <Label Content="SecureMe" FontSize="32" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <StackPanel Width="280">
                <Label Content="Username" Foreground="White"/>
                <TextBox x:Name="txtUsername" Margin="0,0,0,10" />
                <Label Content="Password" Foreground="White"/>
                <PasswordBox x:Name="txtPassword" Margin="0,0,0,10" />
                <Button x:Name="btnLogin" Content="Login" Click="btnLogin_Click"  Width="100" Height="30" Cursor="Hand" />
                <Label x:Name="lblMessage" Foreground="Red" Margin="0,10,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
