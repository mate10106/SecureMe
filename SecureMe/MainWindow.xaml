<Window x:Class="SecureMe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecureMe"
        mc:Ignorable="d"
        Height="650" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
          
            <GradientStop Color="#0F172A" Offset="0" />
           
            <GradientStop Color="#1E293B" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <StackPanel>
                <Image Source="Resources/Images/mountain.png" Width="48" Height="48" />
                <Label Content="Welcome to SecureMe" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
            <StackPanel Width="280">
                <Label Content="Username" Foreground="White"/>
                <TextBox Style="{StaticResource RoundedTextBox}" />
                <Label Content="Password" Foreground="White"/>
                <PasswordBox Style="{StaticResource RoundedPasswordBox}" FontSize="16"/>
                <Button x:Name="btnLogin" Content="LOGIN" Background="SkyBlue" Foreground="White" FontWeight="Bold" Click="btnLogin_Click" Width="120" Height="40" Cursor="Hand" Margin="0 30 0 0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius"  Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Label x:Name="lblMessage" Foreground="Red" Margin="0,10,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
