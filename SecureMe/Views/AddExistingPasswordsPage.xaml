<Page x:Class="SecureMe.Views.AddExistingPasswordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SecureMe.Views"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="500"
      FontFamily="Arial">
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0F172A" Offset="0" />
            <GradientStop Color="#1E293B" Offset="1" />
        </LinearGradientBrush>
    </Page.Background>
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <StackPanel>
                <Label Content="Setup Completed!" FontSize="26" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,10"/>
                <Label Content="Would you like to import your existing passwords?" FontSize="16" Foreground="Gray" HorizontalAlignment="Center" />
            </StackPanel>
            <StackPanel Margin="0 20 0 0">
                <Border Height="200" CornerRadius="10" BorderThickness="2" BorderBrush="#0EA5E9">
                    <Button Background="Transparent" BorderThickness="0"/>
                </Border>
            </StackPanel>
            <TextBlock Foreground="Gray" FontSize="18" HorizontalAlignment="Center" Margin="0,20,0,10">
                ----------- or -----------
            </TextBlock>
            <Button x:Name="btnSkip" FontSize="18" Style="{StaticResource AuthButton}">
               X Skip import for now
            </Button>
            <TextBlock Foreground="Gray" TextWrapping="Wrap" FontSize="17" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,20,0,0">
                You can always import your passwords later from the settings menu
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
