<Page x:Class="SecureMe.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SecureMe.Views"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="500"
      FontFamily="Arial">

    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0F172A" Offset="0" />
            <GradientStop Color="#1E293B" Offset="1" />
        </LinearGradientBrush>
    </Page.Background>
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <StackPanel>
                <Image Source="/Resources/Images/mountain.png" Width="48" Height="48" />
                <Label Content="Welcome to SecureMe" FontSize="26" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
            <StackPanel Width="330">
                <Label Content="Username:" Foreground="White" FontSize="16" Margin="0,12,0,0"/>
                <TextBox Style="{StaticResource RoundedTextBox}" />
                <Label Content="Password:" Foreground="White" FontSize="16" Margin="0,12,0,0"/>
                <PasswordBox Style="{StaticResource RoundedPasswordBox}" FontSize="16"/>
                <Button x:Name="btnLogin" Content="LOGIN" Background="SkyBlue" Foreground="Black" FontWeight="Bold" Click="BtnLogin_Click" Width="120" Height="40" Cursor="Hand" Margin="0 30 0 0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius"  Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Label x:Name="lblMessage" Foreground="Red" Margin="0,10,0,0"/>
            </StackPanel>
            <StackPanel>
                <Button Click="GoToRegister_Click" Style="{StaticResource LinkButtonStyle}">
                    <TextBlock Text="Click here to register" Foreground="White" FontSize="16" Style="{StaticResource LinkTextBlockStyle }" />
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
