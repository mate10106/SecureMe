<Window x:Class="SecureMe.Views.EditPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Password" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Title:" FontSize="14" />
            <TextBox x:Name="txtTitle" Margin="0,5,0,10" />

            <TextBlock Text="Username:" FontSize="14" />
            <TextBox x:Name="txtUsername" Margin="0,5,0,10" />

            <TextBlock Text="Password:" FontSize="14" />
            <PasswordBox x:Name="txtPassword" Margin="0,5,0,10" />

            <TextBlock Text="URL:" FontSize="14" />
            <TextBox x:Name="txtUrl" Margin="0,5,0,10" />

            <Button Content="Save Changes" Click="BtnSave_Click" />
        </StackPanel>
    </Grid>
</Window>
