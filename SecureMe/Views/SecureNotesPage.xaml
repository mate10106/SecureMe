<Page x:Class="SecureMe.Views.SecureNotesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SecureMe.Views"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1103"
      FontFamily="Arial">

    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0F172A" Offset="0" />
            <GradientStop Color="#1E293B" Offset="1" />
        </LinearGradientBrush>
    </Page.Background>

    <Grid>
        <!-- Top Bar -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="#334155" BorderThickness="0,0,0,1" Padding="15" Grid.Row="0">
            <Grid VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Foreground="White" VerticalAlignment="Center" FontWeight="Bold" FontSize="20">
                    Personal Journal
                </TextBlock>
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border BorderBrush="#334155" BorderThickness="0,0,1,0" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search & New Note -->
                    <Border Grid.Row="0" BorderBrush="#334155" BorderThickness="0,0,0,1" Margin="0,0,0,10">
                        <StackPanel Margin="10">
                            <TextBox x:Name="SearchBox" Style="{StaticResource RoundedSearchBar}" FontSize="16" Foreground="White" />
                            <Button Content="+ New Note" Style="{StaticResource AuthButton}" Width="220" FontSize="16" Margin="0,10" Click="OpenAddSecureNotes_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Notes List -->
                    <ScrollViewer Grid.Row="1">
                        <StackPanel>

                            <!-- Sample Note -->
                            <Border BorderBrush="#334155" BorderThickness="0,0,0,1" Padding="10" Margin="0,5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📄" Foreground="#0EA5E9" FontSize="18" VerticalAlignment="Center" Margin="5,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Important Passwords" Foreground="White" FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="Backup codes and recovery information..." Foreground="Gray" FontSize="14"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🔒" Foreground="Gray" FontSize="14"/>
                                            <TextBlock Text="2024.02.25" Foreground="Gray" FontSize="14" Margin="5,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border BorderBrush="#334155" BorderThickness="0,0,0,1" Padding="10" Margin="0,5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📄" Foreground="#0EA5E9" FontSize="18" VerticalAlignment="Center" Margin="5,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Server Configurations" Foreground="White" FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="Production server settings and access..." Foreground="Gray" FontSize="14"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🔒" Foreground="Gray" FontSize="14"/>
                                            <TextBlock Text="2024.02.24" Foreground="Gray" FontSize="14" Margin="5,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>

                </Grid>
            </Border>

            <!-- Right-Side Content -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Personal Journal" Foreground="White" FontSize="22" FontWeight="Bold" Margin="0,10"/>
                <TextBlock Text="Today I learned about the importance of..." Foreground="Gray" FontSize="16"/>
            </StackPanel>

        </Grid>
    </Grid>
</Page>
