<Window x:Class="SecureMe.Views.DetailsPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Details Password" 
        Height="520" Width="620"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FontFamily="Arial">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0F172A" Offset="0" />
            <GradientStop Color="#1E293B" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="0,55,0,0">
            <Label x:Name="txtTitle" Margin="0,10" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
        <Border Margin="20" VerticalAlignment="Center" Width="500" Background="#2b3b54" CornerRadius="10" Padding="20">
            <StackPanel>
                <Grid Margin="0,15" MouseEnter="ShowCopyButton" MouseLeave="HideCopyButton">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Email or Username" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Grid.Column="0"/>
                    <Label x:Name="txtUsername" Foreground="White" FontSize="14" VerticalAlignment="Center" Grid.Column="1"/>
                    <Button x:Name="btnCopyUsername" Content="📋" Width="35" FontSize="14" Grid.Column="2"
                            Visibility="Collapsed" Click="CopyToClipboard"/>
                </Grid>

                <Grid Margin="0,15" MouseEnter="ShowCopyButton" MouseLeave="HideCopyButton">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Password" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Grid.Column="0"/>
                    <PasswordBox x:Name="txtPassword" Background="Transparent" BorderBrush="Transparent"
                                 BorderThickness="0" Foreground="White" CaretBrush="White" FontSize="14" Grid.Column="1"/>
                    <Button x:Name="btnCopyPassword" Content="📋" Width="35" FontSize="14" Grid.Column="2"
                            Visibility="Collapsed" Click="CopyToClipboard"/>
                </Grid>

                <Grid Margin="0,15" MouseEnter="ShowCopyButton" MouseLeave="HideCopyButton">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="URL" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Grid.Column="0"/>
                    <Label x:Name="txtUrl" Foreground="White" FontSize="14" VerticalAlignment="Center" Grid.Column="1"/>
                    <Button x:Name="btnCopyUrl" Content="📋" Width="35" FontSize="14" Grid.Column="2"
                            Visibility="Collapsed" Click="CopyToClipboard"/>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Window>
