<Page x:Class="SecureMe.Views.PasswordGeneratorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SecureMe.Views"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1103"
      FontFamily="Arial">
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0F172A" Offset="0" />
            <GradientStop Color="#1E293B" Offset="1" />
        </LinearGradientBrush>
    </Page.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="380"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#0F172A" Padding="25" CornerRadius="12" VerticalAlignment="Bottom" Width="640" Margin="0,0,0,12">
            <StackPanel>
                <TextBox x:Name="GeneratedPasswordTextBox" 
                                 Text="GeneratedPassword" 
                                 IsReadOnly="True" 
                                 Foreground="White" 
                                 Background="Transparent"
                                 FontSize="16" 
                                 BorderThickness="0"/>
                <Button Content="📋" Width="40" Height="40" Style="{StaticResource EditButtonStyle}" HorizontalAlignment="Right" Click="CopyPasswordToClipboard"/>


                <TextBlock Text="🔧 Password Settings" FontSize="14" Foreground="LightGray" Margin="10 20 10 5"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Password Length:" Foreground="White" FontSize="14"/>
                    <Slider x:Name="PasswordLengthSlider" Minimum="8" Maximum="64" Value="32" Width="200"
                            ValueChanged="PasswordLengthSlider_ValueChanged"/>
                    <TextBlock x:Name="PasswordLengthText" Text="32" Foreground="White" FontSize="14" Margin="5 0 0 0"/>
                </StackPanel>
                <Grid Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                        <RowDefinition Height="25" />
                    </Grid.RowDefinitions>
                    <WrapPanel Grid.Row="0" HorizontalAlignment="Center">
                        <CheckBox x:Name="UppercaseCheckBox" Content="Uppercase (A-Z)" IsChecked="True" FontSize="16"  Foreground="White" Margin="10 0"/>
                        <CheckBox x:Name="LowercaseCheckBox" Content="Lowercase (a-z)" IsChecked="True" FontSize="16"  Foreground="White" Margin="10 0"/>
                    </WrapPanel>
                    <WrapPanel Grid.Row="1" HorizontalAlignment="Center">
                        <CheckBox x:Name="NumbersCheckBox" Content="Numbers (0-9)" IsChecked="True" FontSize="16" Foreground="White" Margin="10 0"/>
                        <CheckBox x:Name="SymbolsCheckBox" Content="Symbols (!@#$%^&amp;*)" IsChecked="True" FontSize="16"  Foreground="White" Margin="10 0"/>
                    </WrapPanel>
                </Grid>
                    <Button Content="Generate Password" Width="200" Margin="0,8,0,0" Click="GeneratePassword_Click" Style="{StaticResource AuthButton}"/>
            </StackPanel>
            </Border>
        <Border Grid.Row="1" Background="#0F172A" Width="640" Padding="25" CornerRadius="12" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Password Strength Tips" FontSize="20" Foreground="White" FontWeight="Bold" Margin="0,0,0,8"/>
                <TextBlock Text="• Use at least 12 characters for better security" FontSize="17" Foreground="Gray" Margin="0,3"/>
                <TextBlock Text="• Mix uppercase and lowercase letters" FontSize="17" Foreground="Gray" Margin="0,3"/>
                <TextBlock Text="• Include numbers and special characters" FontSize="17" Foreground="Gray" Margin="0,3"/>
                <TextBlock Text="• Avoid common words and patterns" FontSize="17" Foreground="Gray" Margin="0,3"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
