<Page x:Class="SecureMe.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SecureMe.Views"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="500"
      FontFamily="Arial">

    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0F172A" Offset="0" />
            <GradientStop Color="#1E293B" Offset="1" />
        </LinearGradientBrush>
    </Page.Background>
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <Image Source="/Resources/Images/mountain.png" Width="48" Height="48"  />
                <Label Content="Register to SecureMe" Foreground="White" FontSize="26"  HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
            <StackPanel Width="330">
                <TextBox x:Name="txtUsername" Style="{StaticResource RoundedTextBox}"  FontSize="20" Foreground="White" Margin="0,20,0,0"/>
                <PasswordBox x:Name="txtPassword" Style="{StaticResource RoundedPasswordBox}"  FontSize="20" Foreground="White" Margin="0,20,0,0"/>
                <PasswordBox x:Name="txtConfirmPassword" Style="{StaticResource RoundedPasswordBox}" FontSize="20" Foreground="White" Margin="0,20,0,0" />
                <Button x:Name="btnRegister" Click="BtnRegister_Click" FontSize="18" Style="{StaticResource AuthButton}">
                    REGISTER
                </Button>
                <Label x:Name="lblMessage" Foreground="Red" Margin="0,10,0,0"/>
            </StackPanel>
            <StackPanel>
                <Button x:Name="GoToLogin" Click="GoToLogin_Click" Style="{StaticResource LinkButtonStyle}">
                    <TextBlock Text="Click here to login" Style="{StaticResource LinkTextBlockStyle}" Foreground="White" FontSize="16" />
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
