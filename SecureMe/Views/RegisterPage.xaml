<Page x:Class="SecureMe.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SecureMe.Views"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="500">

    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0F172A" Offset="0" />
            <GradientStop Color="#1E293B" Offset="1" />
        </LinearGradientBrush>
    </Page.Background>
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <Image Source="/Resources/Images/mountain.png" Width="48" Height="48"  />
                <Label Content="Register to SecureMe" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
            <StackPanel Width="280">
                <Label Content="Username:" Foreground="White"/>
                <TextBox Style="{StaticResource RoundedTextBox}" FontSize="16"/>
                <Label Content="Password:" Foreground="White"/>
                <PasswordBox Style="{StaticResource RoundedPasswordBox}" FontSize="16"/>
                <Label Content="Confirm Password:" Foreground="White"/>
                <PasswordBox Style="{StaticResource RoundedPasswordBox}" FontSize="16"/>
                <Button x:Name="btnRegister" Content="REGISTER" Background="SkyBlue" Foreground="White" FontWeight="Bold" Click="BtnRegister_Click" Width="120" Height="40" Cursor="Hand" Margin="0 30 0 0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius"  Value="6" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Label x:Name="lblMessage" Foreground="Red" Margin="0,10,0,0"/>
            </StackPanel>
            <StackPanel>
                <Button x:Name="goToLogin" Click="GoToLogin_Click" Background="Transparent" FontStyle="Italic" Foreground="White" Width="160" BorderThickness="0">
                    Already have an account?
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
